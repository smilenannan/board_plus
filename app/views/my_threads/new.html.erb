<h1>スレッド新規作成</h1>

<%= form_for @my_thread do |f| %>
<%= f.label :title %><br>
<%= f.text_field :title %><br>
<%= f.label :content %><br>
<%= f.text_area :content %><br>
<% if @my_thread.errors.any? %>
<%="文字を入力してください" %>
<% end %>
<%= f.hidden_field :user_id, :value=>current_user.id %>
<%= f.submit %>

<% end %>

<p>
  <%= link_to '戻る', my_threads_path %>
</p>
